{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react",
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "build", "config"]
}
